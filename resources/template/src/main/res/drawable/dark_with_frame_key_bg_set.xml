<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--enter-->
    <!--<item android:state_active="true" android:state_pressed="true"-->
        <!--android:drawable="@drawable/ic_keyboard_bottom_pressed" />-->
    <!--<item android:state_active="true"-->
        <!--android:drawable="@drawable/ic_keyboard_bottom_normal" />-->
    <item android:state_active="true" android:state_pressed="true"
        android:drawable="@drawable/ic_keyboard_bottom_action_pressed" />
    <item android:state_active="true"
        android:drawable="@drawable/ic_keyboard_bottom_action_normal" />

    <!-- Toggle keys. Use checkable/checked state. shift 选中状态的下划线，在背景上 -->
    <item android:state_checkable="true" android:state_checked="true" android:state_pressed="true"
        android:drawable="@drawable/ic_keyboard_shift_key_normal_checked_pressed" />
    <item android:state_checkable="true" android:state_pressed="true"
        android:drawable="@drawable/ic_keyboard_bottom_pressed" />
    <item android:state_checkable="true" android:state_checked="true"
        android:drawable="@drawable/ic_keyboard_shift_key_normal_checked" />
    <item android:state_checkable="true"
        android:drawable="@drawable/ic_keyboard_bottom_normal" />

    <!-- Empty background keys. 没有字符， 没有作用的键-->
    <item android:state_empty="true" android:state_pressed="true"
        android:drawable="@drawable/transparent" />
    <item android:state_empty="true"
        android:drawable="@android:color/transparent" />

    <!-- Normal keys. -->

    <item android:drawable="@drawable/ic_keyboard_normal_key_pressed" android:state_pressed="true" />
    <item android:drawable="@drawable/ic_keyboard_normal_key_normal" />

</selector>